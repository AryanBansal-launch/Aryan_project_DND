# ============================================
# JobPortal Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control!

# ============================================
# Contentstack CMS Configuration (Required)
# ============================================
NEXT_PUBLIC_CONTENTSTACK_API_KEY=your-contentstack-api-key
NEXT_PUBLIC_CONTENTSTACK_DELIVERY_TOKEN=your-delivery-token
NEXT_PUBLIC_CONTENTSTACK_ENVIRONMENT=development
NEXT_PUBLIC_CONTENTSTACK_REGION=us
# Optional: For content management operations (seeding data)
NEXT_PUBLIC_CONTENTSTACK_MANAGEMENT_TOKEN=your-management-token

# Optional: Content Delivery Host (leave blank for default)
# NEXT_PUBLIC_CONTENTSTACK_CONTENT_DELIVERY=

# ============================================
# Contentstack Preview & Live Preview (Optional)
# ============================================
# Set to 'true' to enable preview mode
NEXT_PUBLIC_CONTENTSTACK_PREVIEW=false
NEXT_PUBLIC_CONTENTSTACK_PREVIEW_TOKEN=your-preview-token
# NEXT_PUBLIC_CONTENTSTACK_PREVIEW_HOST=
# NEXT_PUBLIC_CONTENTSTACK_CONTENT_APPLICATION=

# ============================================
# Contentstack Personalize (Optional)
# ============================================
NEXT_PUBLIC_CONTENTSTACK_PERSONALIZE_PROJECT_UID=your-personalize-project-uid
# Personalize Management API Auth Token (for setup scripts)
# Get this from Contentstack Dashboard → Personalize → Your Project → Settings → API Keys
NEXT_PUBLIC_CONTENTSTACK_PERSONALIZE_AUTHTOKEN=your-personalize-authtoken
# Alternative env var names (also supported):
# CONTENTSTACK_PERSONALIZE_AUTHTOKEN=your-personalize-authtoken
# CONTENTSTACK_AUTHTOKEN=your-personalize-authtoken

# Optional: Override Personalize Management API base URL (if different from default)
# CONTENTSTACK_PERSONALIZE_MANAGEMENT_BASE_URL=https://personalize-api.contentstack.com
# CONTENTSTACK_PERSONALIZE_MANAGEMENT_API_PREFIX=/v1

# Optional: For automated variant creation via setup scripts
# CONTENTSTACK_CREATE_ENTRY_VARIANTS=true
# CONTENTSTACK_PUBLISH_ENTRY_VARIANTS=true

# Optional: Specify base entry UID for personalization (if not provided, script will auto-detect)
# CONTENTSTACK_PERSONALIZE_BASE_ENTRY_UID=your-entry-uid
# CONTENTSTACK_PERSONALIZE_CONTENT_TYPE_UID=personalized_banner

# ============================================
# Algolia Search Configuration (Required)
# ============================================
NEXT_PUBLIC_ALGOLIA_APP_ID=your-algolia-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your-search-only-api-key
NEXT_PUBLIC_ALGOLIA_INDEX_NAME=job
# Admin key for syncing data (server-side only)
ALGOLIA_ADMIN_KEY=your-algolia-admin-key

# ============================================
# NextAuth.js Configuration (Required)
# ============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-at-least-32-characters

# ============================================
# Google OAuth Configuration (Optional)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# Database Configuration - NeonDB (Required)
# ============================================
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# ============================================
# Admin Panel Protection (Required)
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# ============================================
# Demo Video Protection (Optional)
# ============================================
DEMO_PASSWORD=your-demo-password

# ============================================
# Contentstack Automate - Webhooks (Optional)
# ============================================
# For automated email notifications
CONTENTSTACK_AUTOMATE_WEBHOOK_URL=https://app.contentstack.com/automations-api/run/your-application-webhook
CONTENTSTACK_NEW_JOB_EMAIL_WEBHOOK=https://app.contentstack.com/automations-api/run/your-new-job-webhook
CONTENTSTACK_WEBHOOK_SECRET=your-webhook-secret

# ============================================
# Contentstack AI Chatbot Widget (Optional)
# ============================================
NEXT_PUBLIC_CHATBOT_WIDGET_URL=https://chatbot-marketplace-try.contentstackapps.com/chatbot-widget.js?site_key=your-site-key

# ============================================
# Google Analytics (Optional)
# ============================================
GA_PROPERTY_ID=your-ga-property-id
GA_CLIENT_EMAIL=your-ga-service-account-email
GA_PRIVATE_KEY=your-ga-private-key

# ============================================
# Internal APIs (Optional)
# ============================================
INTERNAL_EDGE_SECRET=your-internal-edge-secret

# ============================================
# Playwright Testing (Optional)
# ============================================
# PLAYWRIGHT_BASE_URL=http://localhost:3000
# CI=false
